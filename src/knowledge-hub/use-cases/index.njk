<h1 class="govuk-heading-l">Use cases</h1>
<p class="govuk-body">An introductory paragraph can appear here...</p>

{% for useCase in knowledgeHubUseCases %}

  <div class="govuk-summary-card govuk-!-margin-top-9">
    <div class="govuk-summary-card__title-wrapper">
      <h2 class="govuk-summary-card__title">{{ useCase.title }}</h2>
      <ul class="govuk-summary-card__actions">
      <li class="govuk-summary-card__action">
        <strong class="govuk-tag govuk-tag--pink">Tag 1</strong>
      </li>
      <li class="govuk-summary-card__action">
        <strong class="govuk-tag govuk-tag--pink">Tag 2</strong>
      </li>
    </ul>
    </div>
    <div class="govuk-summary-card__content">
      <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Organisation</dt>
          <dd class="govuk-summary-list__value">{{ useCase.organisation }}</dd>
        </div>
        {% if useCase.phase %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">Phase</dt>
            <dd class="govuk-summary-list__value">{{ useCase.phase }}</dd>
          </div>
        {% endif %}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Challenge</dt>
          <dd class="govuk-summary-list__value">{{ useCase.challenge }}</dd>
        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Solution</dt>
          <dd class="govuk-summary-list__value">{{ useCase.solution }}</dd>
        </div>
        {% if useCase.results %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">Results</dt>
            <dd class="govuk-summary-list__value">{{ useCase.results }}</dd>
          </div>
        {% endif %}
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">Links</dt>
          <dd class="govuk-summary-list__value">
            <ul class="govuk-list">
            {% for link in useCase.links %}
              <li>
                <a class="govuk-link" href="{{ link.url }}">
                  {{ link.text }}
                  <span class="govuk-visually-hidden"> ({{ useCase.title }})</span>
                </a>
              </li>
            {% endfor %}
          </dd>
        </div>
      </dl>
    </div>
  </div>

{% endfor %}

<a href="/knowledge-hub" class="govuk-button govuk-!-margin-bottom-0 govuk-!-margin-top-7">Back to Knowledge Hub homepage</a>