{# Option H #}

{% macro homepageBanner (title, description, logo, theme, cta) %}

{% if description %}
  {% set padding = 7 %}
{% else %}
  {% set padding = 8 %}
{% endif %}

<div class="app-masthead app-masthead--product app-masthead--{{ theme }} govuk-!-padding-bottom-{{ padding }} govuk-!-padding-top-{{ padding }}">
  <div class="govuk-width-container govuk-!-margin-top-5 govuk-!-margin-bottom-5">
    <div class="govuk-grid-row govuk-!-display-flex">
      <div class="govuk-grid-column-two-thirds govuk-!-padding-right-0">
        <h1 class="app-masthead__title govuk-heading-xl govuk-!-margin-bottom-0">{{ title | safe }}</h1>
        {% if description %}
          <p class="app-masthead__description govuk-!-margin-top-6">{{ description }}</p>
        {% endif %}
        {% if cta %}
          <a class="govuk-button govuk-button--start govuk-!-margin-top-5 govuk-!-margin-bottom-2" href="{{ cta.url }}">
            {{ cta.desc }}
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
              <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg>
          </a>
        {% endif %}
      </div>
      <div class="govuk-grid-column-one-third app-masthead__logo">
        {{ logo | safe }}
      </div>
    </div>
  </div>
</div>

{% endmacro %}
