{% if jobs.length %}
    <section class="iai-open-jobs">
        <div class="container">
            <h2 class="iai-heading">Current jobs open for application</h2>
            {% for job in jobs %}
                <div class="iai-open-jobs__job-container border-b border-grey-300">
                    <h2 class="text-[18px] font-semibold pb-0">{{ job.title | safe }} ({{ job.grade }})</h2>
                    <p class="mt-2 text-[13px] font-semibold text-slate-600">{{ job.location }} &#8226; {{ job.salary }}</p>
                    {% if job.headline %}
                        <p class="text-[18px] text-slate-800 font-light mb-2">{{ job.headline }}</p>
                    {% endif %}
                    <div class="-mt-2">
                        <a href="/jobs/{{ job.title | slugify }}/" class="iai-button iai-button--pink">{{job.title}}<span> &#8594;</span></a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endif %}


<section class="container iai-roles">
    <h2 class="iai-heading iai-roles__heading">Roles in the team</h2>
    <div class="iai-grid iai-grid--1-3">
        
        <nav aria-label="In-page links">
            <ul class="iai-side-nav">
                {% for group in roles %}
                    <li class="iai-side-nav__item">
                        <inpage-link>
                            <a class="iai-side-nav__link" href="#{{group.group | slugify}}">{{group.group}}</a>
                        </inpage-link>
                    </li>
                {% endfor %}
            </ul>
        </nav>

        <div>
            {% for group in roles %}
                <h3 class="iai-roles__group-heading" id="{{group.group | slugify}}">{{group.group}}</h3>
                {% for role in group.roles %}
                    <div class="iai-roles__role-container">
                        <h4 class="iai-roles__role-heading">{{role.title}}</h4>
                        <details class="iai-roles__detail">
                            <summary>
                                <span class="iai-roles__detail-show">Show</span>
                                <span class="iai-roles__detail-hide">Hide</span> 
                                {% if role.roleSpec %}role responsibilities and {% endif %}person specification
                                <span class="sr-only"> ({{role.title}})</span>
                            </summary>
                            <div class="iai-roles__role-detail-container">
                                {% if role.roleSpec %}
                                    <div>
                                        <h4>Role responsibilities:</h4>
                                        <ul class="iai-list">
                                            {% for item in role.roleSpec %}
                                                <li class="iai-list__item">{{item}}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                {% endif %}
                                <div>
                                    <h4 class="iai-roles__list-heading--person">Person specification:</h4>
                                    <ul class="iai-list">
                                        {% for item in role.personSpec %}
                                            <li class="iai-list__item">{{item}}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </details>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</section>

