                grid-column-end: 11;
                grid-row: 1;
                grid-template-columns: 1fr;
            }
            .iai-infographic__card--website {
                font-size: 1rem;
                grid-column-start: 1;
                grid-column-end: 3;
                grid-row-start: 2;
                grid-row-end: 4;
                line-height: 1.3;
            }
            .iai-infographic img {
                margin-top: 0;
            }
            .iai-infographic__card--delivery-partners img {
                margin-left: 0.5rem;
                width: 100%;
            }
            .iai-infographic__inner-box {
                background-color: white;
                border: 1px solid #aaa;
                border-radius: 0.25rem;
                margin-top: 0.5rem;
                padding: 0.25rem 0.5rem;
                position: relative;
            }
            .iai-infographic__card--products {
                grid-row-start: 2;
                grid-row-end: 4;
            }
            .iai-infographic__card--tech-partners {
                font-size: 1.25rem;
                grid-column-start: 3;
                grid-column-end: 5;
            }
            .iai-infographic__card--tech-partners img {
                display: block;
                margin-bottom: -1rem;
                position: relative; top: -0.75rem;
            }
            .iai-infographic__bold {
                font-weight: bold;
            }
            .iai-infographic__flex--mobile {
                align-items: center;
                display: flex;
                gap: 0.5rem;
            }
            .iai-infographic__pink {
                color: var(--iai-pink);
                font-weight: bold;
            }
            .iai-infographic__teal {
                color: var(--iai-teal);
                font-weight: bold;
            }
            @media (min-width: 1024px) {
                .iai-infographic {
                    display: grid;
                }
                .iai-infographic::after {
                    background-color: var(--iai-pink);
                    content: "";
                    height: 100%;
                    position: absolute;
                    right: 15%;
                    top: 0;
                    transform: skewX(-15deg);
                    width: 17%;
                }
                .iai-infographic__card--delivery-partners {
                    gap: 0.125rem;
                    grid-template-columns: 1fr 3fr;
                }
                .iai-infographic__card--tech-partners img {
                    margin-bottom: -3rem;
                    position: relative; top: -2.5rem;
                }
