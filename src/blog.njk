                flex-direction: column;
                font-size: 1rem;
                gap: 1rem;
                grid-template-columns: repeat(10, 1fr);
                grid-template-rows: repeat(3, auto);
                line-height: 1.1;
                max-width: 68rem;
                padding: 1rem;
                position: relative;
            }
            .iai-infographic__card {
                background-color: white;
                border-radius: 0.25rem;
                box-shadow: -4px -4px 10px 0px rgba(0, 0, 0, 0.15);
                overflow: hidden;
                padding: 0.875rem;
                position: relative;
                z-index: 1;
            }
            .iai-infographic__card--delivery-partners {
                align-items: center;
